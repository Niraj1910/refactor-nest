<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Election</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/tailwind.css">
    <script src="/javascripts/choices.min.js"></script>
    <!-- <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script> -->
    <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css" /> -->
    <link rel="stylesheet" href="/stylesheets/choices.min.css" />
</head>

<body class="bg-gray-100">
    <%- include('navbar.ejs') %>

    <div class="container mx-auto py-8">
        <h1 class="text-3xl font-bold mb-6 text-center">Create New Election</h1>

        <form action="/api/assembly-elections" method="POST" class="bg-white shadow-lg rounded-lg p-6 max-w-lg mx-auto">
            <div class="mb-5">
                <label for="year" class="block text-sm font-medium text-gray-700">Year</label>
                <input type="text" id="year" name="year" required
                    class="mt-1 block w-full border rounded-md px-3 py-2 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50">
            </div>

            <div class="mb-5">
                <label for="state" class="block text-sm font-medium text-gray-700">State</label>
                <input type="text" id="state" name="state" required
                    class="mt-1 block w-full border rounded-md px-3 py-2 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50">
            </div>

            <div class="mb-5">
                <label for="constituencies" class="block text-sm font-medium text-gray-700">Select Constituencies</label>
                <select id="constituencies" name="constituencies[]" multiple class="choices-multiple-select">
                    <% constituencies.forEach(function(constituency) { %>
                        <option value="<%= constituency.id %>"><%= constituency.name %></option>
                    <% }); %>
                </select>
            </div>

            <div class="mb-5">
                <label for="total_seat" class="block text-sm font-medium text-gray-700">Total Seats</label>
                <input type="number" id="total_seat" name="total_seat" min="0" required
                    class="mt-1 block w-full border rounded-md px-3 py-2 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50">
            </div>

            <div class="mb-5">
                <label for="total_votes" class="block text-sm font-medium text-gray-700">Total Votes</label>
                <input type="number" id="total_votes" name="total_votes" min="0" required
                    class="mt-1 block w-full border rounded-md px-3 py-2 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50">
            </div>

            <div class="mb-5">
                <label for="total_candidate" class="block text-sm font-medium text-gray-700">Total Candidates</label>
                <input type="number" id="total_candidate" name="total_candidate" min="0" required
                    class="mt-1 block w-full border rounded-md px-3 py-2 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50">
            </div>

            <div class="flex items-center justify-between mt-6">
                <button type="submit"
                    class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition duration-300 focus:outline-none focus:ring-2 focus:ring-blue-300 focus:ring-opacity-50">Create
                    Election</button>
                <a href="/elections" class="text-blue-500 hover:text-blue-700 transition duration-300">Back to Elections List</a>
            </div>
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            new Choices('#constituencies', {
                removeItemButton: true,
                searchPlaceholderValue: 'Search Constituencies...',
            });
        });
    </script>
</body>

</html>
